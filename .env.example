# Discord Bot Token
# Discord Developer Portal에서 발급받은 봇 토큰
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID
# Discord Developer Portal에서 확인할 수 있는 Application ID
CLIENT_ID=your_client_id_here

# Guild ID (Optional)
# 특정 서버에서만 슬래시 커맨드를 등록할 경우 사용
GUILD_ID=your_guild_id_here

# Riot Games API Key (Optional)
# LoL 전적 조회를 위한 Riot API 키
# https://developer.riotgames.com 에서 발급
RIOT_API_KEY=your_riot_api_key_here

# Update Notification Channel ID (Optional)
# 봇 업데이트 시 알림을 받을 채널 ID
UPDATE_CHANNEL_ID=your_channel_id_here

# Dashboard Settings (Optional)
# 대시보드 웹서버를 활성화하려면 아래 설정 필요

# Discord OAuth2 Client Secret
# Discord Developer Portal > OAuth2 > Client Secret
CLIENT_SECRET=your_client_secret_here

# Dashboard URL (기본값: http://localhost:3000)
DASHBOARD_URL=http://localhost:3000

# Dashboard Port (기본값: 3000)
DASHBOARD_PORT=3000

# Session Secret (세션 암호화 키)
SESSION_SECRET=your_random_session_secret_here

# Node Environment (production으로 설정 시 HTTPS 쿠키 활성화)
NODE_ENV=production
